    {{!-- Main registration container --}}
    <div id="reg_container">
        <form class="reg_form">
            <p id="reg_form_header"> Create an account</p>

            {{!-- Register fields --}}
            <div id="main_reg_form_content">
                {{!-- Email field and validation --}}
                <div id='email_not_correct_reg'>Email is not correct</div>
                <div id='email_taken_reg'>Email is already taken</div>
                <div><input name="email"  id='reg_email' type="e-mail" placeholder="E-mail"></div>

                {{!-- Name field is optional --}}
                <div> <input name='name' id='reg_name' type="text" id="reg_name" placeholder="Name"></div>
                
                {{!-- Username field and validation --}}
                <div id='username_taken_reg'> Username already taken </div>
                <div><input name="username"  id='reg_username' type="text" id="reg_username" placeholder="Username"></div>
                
                {{!-- Password field and validation --}}
                <div id='pass_short_reg'> Password should be at least 8 symbols </div>
                <div id='pass_secure_reg'> Password is secure <span id='secure_index_reg'></span></div>
                <div><input name="password" id='reg_password' type="password" placeholder="Password"></div>
            
                {{!-- Password confirm and validate --}}
                <div id='pass_not_equal_reg'> Passwords are not equal</div>            
                <div id='pass_equal_reg'> Passwords are equal</div>   
                <div><input name="passwordConfirm" id='reg_password_confirm' type="password" placeholder="Password Confirmation"></div>
                
                {{!-- Register button --}}
                <div> <button id='main_reg_btn' type='submit'>Register</button></div>
                <div id="reg_existing_acc_link">
                    Already have an account?
                    <a id="reg_exiting_acc_login">Login</a>
                </div>
                </div>
        </form>
    </div>
</div>

