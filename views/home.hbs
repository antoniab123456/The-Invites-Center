<div id="home_main_container">
    {{!-- The User Settings Bar--}}
    {{#if user}}
    {{!-- The blue user model --}}
    {{#if user.profile_img}}
        <div id="profile_icon_picture" style="background:url('/users/image?image={{user.profile_img}}') no-repeat center; background-size: cover;"></div>
    {{else}}
        <div id="profile_icon"></div>
    {{/if}}
    <div id="profile_settings_modal">
        <div id="inner_profile_modal">
            <div>
                <ul>
                    <li id="profile_settings_username">{{user.username}}</li>
                    <li id='profile_model_profile'> <a href="/users/profile">Profile</a> </li>
                    <li id='profile_model_settings'> <a href="/users/settings">Settings</a> </li>
                </ul>
            </div>
        </div>
    </div>
    {{/if}}

    <div id="home_container">
        {{#if user}}
            <div id="all_users_section">
                <div id="inner_users_section">
                    <div id="all_user_hat">
                        <p>Users</p>
                    </div>
                    <ul id="all_users_ul"></ul>
                    <div>
                        <button id="invite_users_btn">Invite</button>
                    </div>
                </div>
            </div>

            {{!-- A div that will be copied into the js for each conversation --}}
            <div class="convo_main_div">
                <div class='convo_div_profile_image'></div>
                <div class="convo_div_hat"></div>
                <div class='online_status_convo'> ● </div>
                <div class="minimize_convo">_</div>
                <div class="more_sign">⋮</div>
                <div class='chat_contents_container'></div>
                <div class="message_send_panel">
                    <textarea class='textarea_chat'></textarea>
                    <div class="send_msg_btn">➤</div>
                </div>
            </div> 


            <div class="convo_preview">
                <div class="user_name_panel"></div>
                <div class='preview_convo_profile_image'></div>
                <div class='online_status'>●</div>
                <div class='new_msg'>0</div>
                <div class="close_chat_preview">&#x2715;</div>
            </div>
            
            <div class="all_chats_container"></div>
{{!-- 
            <script src="/js/home/users_load.js"></script>
            <script src="/js/home/chat.js"></script> --}}
        {{/if}}
    </div>
</div>

{{!-- The invitation link gen modal --}}
<div id="gen_link_model">
    <div id="inner_gen_link">
        <span id="get_link_close">&times;</span>
        <p id="gen_link_header">Click on the button to generate the invitation link</p>
        <div id="gen_link_form">
            <input id="link_gen_input" type="text" id="links" value="" readonly>
            <div id="copy_sign"><p>copy</p></div>
        </div>
        <div>
            <button id="generate_link_btn">Generate Link</button>
        </div>
    </div>
</div>


{{!-- The each user section that will be copied to USERS for each existing user --}}
<div class="eachuser">
    <li class='each_user_list'>
        <a class='username_link_chat'></a>
        <div class='message_count_icon'> 0 </div>
        <div class='online_status_each_user'> ● </div>
